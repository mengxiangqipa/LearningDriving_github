<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gooddream_white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gooddream_gray_light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_1_hover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop1_hover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pop1"
                android:textSize="@dimen/gooddream_14dp" />

            <ImageView
                android:id="@+id/iv_pop1_hover"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_black" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/gooddream_gray_light" />

        <LinearLayout
            android:id="@+id/linear_2_hover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop2_hover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pop2"
                android:textSize="@dimen/gooddream_14dp" />

            <ImageView
                android:id="@+id/iv_pop2_hover"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_black" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/gooddream_gray_light" />

        <LinearLayout
            android:id="@+id/linear_3_hover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_pop3_hover"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/pop3"
                android:textSize="@dimen/gooddream_14dp" />

            <ImageView
                android:id="@+id/iv_pop3_hover"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/arrow_black" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px">

        <View
            android:id="@+id/viewSplit_hover"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gooddream_gray_light" />

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="30dp"
            android:layout_height="2dp"
            android:scaleType="matrix"
            android:src="@color/gooddream_blue" />
    </RelativeLayout>
</LinearLayout>