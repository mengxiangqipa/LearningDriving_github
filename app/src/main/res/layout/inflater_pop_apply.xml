<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_pop_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F000000"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout"
        style="@style/exitStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_exit"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="温馨提醒"
                android:textColor="@android:color/black"
                android:textSize="@dimen/gooddream_14dp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_tip2" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray"
            android:visibility="invisible" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:gravity="center_vertical"
                android:lineSpacingExtra="6dp"
                android:onClick="onClick"
                android:text="@string/popContent_apply"
                android:textColor="@color/gooddream_gray_light"
                android:textSize="@dimen/gooddream_12dp" />
        </ScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D1D1D1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#D1D1D1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/selector_pop_cancel"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_selector_tv_cancel" />

            <TextView
                android:id="@+id/tv_ensure"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/selector_pop_ensure"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_selector_tv_ensure" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>