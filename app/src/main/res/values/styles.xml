<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="custom_dialog" parent="@android:style/Theme.Dialog" />

    <style name="popWindowAnim">
        <item name="android:windowEnterAnimation">@anim/myset_pop_alpha1</item>
        <item name="android:windowExitAnimation">@anim/myset_pop_alpha0</item>
    </style>

    <style name="exitStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_exit</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="radioButtonHome">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/gooddream_12dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_selector_rb</item>
    </style>

    <style name="radioButtonC1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/gooddream_12dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_selector_rb_c1c2</item>
    </style>

    <style name="radioButtonEvaluate">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/gooddream_12dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_selector_rb_evaluate</item>
    </style>

    <style name="learnig_2_1_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/gooddream_14dp</item>
        <item name="android:textColor">@color/gooddream_gray_dark</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ratingbar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style>

    <style name="ratingBar13dp" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ratingbar_13dp</item>
        <item name="android:minHeight">13dp</item>
        <item name="android:maxHeight">13dp</item>
    </style>
    <style name="ratingBarWhite" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ratingbar_white</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>
    <!--<item name="android:minWidth">14dp</item>-->
    <!--<item name="android:maxWidth">14dp</item>-->

    <style name="progress">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_progress
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
    </style>

    <style name="progressPersonal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/layer_list_progress_personal
        </item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
    </style>

    <style name="MyTheme" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
        <!--<item name="android:windowBackground">@drawable/splash</item>-->

    <!--    <style name="MyTheme" parent="AppTheme.NoActionBar">
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
            <item name="android:windowIsTranslucent">true</item>
        </style>-->

    <style name="MyThemeTranslucent" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/trans</item>
    </style>
</resources>
